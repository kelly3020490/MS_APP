<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ms_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".schedule.Schedule"
            android:label="@string/app_name_schedule"
            android:parentActivityName=".home.Home" />
        <activity
            android:name=".menu.Menu"
            android:label="@string/app_name_menu"
            android:parentActivityName=".home.Home" />
        <activity
            android:name=".QRcode.QRcode"
            android:label="@string/app_name_qrcode"
            android:parentActivityName=".home.Home" />
        <activity
            android:name=".schoolbus.SchoolBus"
            android:label="@string/app_name_school_bus"
            android:parentActivityName=".home.Home" />
        <activity
            android:name=".leave.Leave"
            android:label="@string/app_name_leave"
            android:parentActivityName=".home.Home" />
        <activity
            android:name=".medicine.Medicine"
            android:label="@string/app_name_medicine"
            android:parentActivityName=".home.Home" />
        <activity
            android:name=".schoolbook.SchoolBook"
            android:label="@string/app_name_school_book"
            android:parentActivityName=".home.Home" />
        <activity
            android:name=".schoolrecord.schoolRecord"
            android:label="@string/app_name_school_record"
            android:parentActivityName=".home.Home" />
        <activity android:name=".home.Home"
            android:theme="@style/AppTheme"/>
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>